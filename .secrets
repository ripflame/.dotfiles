# PERSONAL local shortcuts
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl -n"
alias g="gvim --remote-silent"

alias l="ls -lh"
alias ll="ls -lah"
alias la="ls -A"
alias dk="cd ~/Desktop"
alias cl="clear"
alias yolo="sudo"
alias stfu="osascript -e 'set volume output muted true'"
alias cpwd="pwd | tr -d '\n' | pbcopy"
alias dev="cd ~/Development/"

# Get readable list of network IPs
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"


alias sites="cd /usr/local/etc/nginx/sites-available"
alias enabled="cd /usr/local/etc/nginx/sites-enabled"
alias serverconf="cd /usr/local/etc/nginx"
alias www="cd /usr/local/var/www"
alias web="cd ~/Development/Web"
alias netti="open ~/Movies/.netti"

